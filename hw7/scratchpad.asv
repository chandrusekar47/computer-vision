clc;clear;close all;
img = double(imread('input\tower.png'));
[height, width] = size(img);
radius = 3;
thresholds = [20 30 50 60];
n_star = 9;
for threshold=thresholds
    
    imagesc(img);
    colormap('gray');
    hold on;
    plot(points(:, 1), points(:, 2), 'rx');
    hold off;
    pause(2);
end
